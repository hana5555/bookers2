<main>
  <div class="container">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>



        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <p><label for="inputName">Name</label></p>
            <p><%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "name" %></p>
          </div>
          <div>
            <p><label for="inputImage">Image</label></p>
            <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          </div>
          <div>
            <p><label for="inputIntroduction">Introduction</label></p>
            <p><%= f.text_area :introduction, autofocus: true, id: "inputIntroduction" %></p>
          </div>
          <div>
            <%= f.submit "Update User" %>
          </div>
        <% end %>
    </div>
  </div>
</main>